<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login</title>
</head>
<body>
    {{>navbar}}
    <div class="outer-box">
        <div class="header">
            <p>Employee Login Form</p>
        </div>
        <div class="inner-box">
            <img src="images/login.jfif" alt="" class="img-fluid">
            <form action="/login" method="POST" name="Emp-login-form">
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email" value="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Password" value="">
                </div>
                <input type="submit" value="Sign in" id="signIn" onclick="submitForm();">
                <div class="form-check">
                    <label for="checkBox" class="form-check-label">
                        <input id="checkBox" type="checkbox" class="form-check-input" name="RememberMe" required>
                        &nbsp;<span>Remember me &nbsp;<a href="#">Need help?</a></span>
                    </label>
                </div>
             </form>
        </div>
        <div class="footer">
             <p><a href="/register">Create an account</a></p>
        </div>
    </div>
    {{>footer}}
    {{>links}}
    <script>
        const preventDef=(event)=>{
            event.preventDefault();
        };
        function submitForm() {
            // Get the first form with the name
            // Hopefully there is only one, but there are more, select the correct index
            var frm = document.getElementsByName('Emp-login-form')[0];
            frm.submit(); // Submit
            frm.reset();  // Reset
            return false; // Prevent page refresh
         }
    </script>
</body>
</html>